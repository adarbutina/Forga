<flynt-component name="NavigationFooter" data-theme="dark">
  <div class="container">
    {% if contentHtml %}
      <div class="content" data-text-align="center">
        {{ contentHtml|e('wp_kses_post') }}
      </div>
    {% endif %}
    {% if menu %}
      <nav aria-label="{{ labels.navigationAriaLabel }}">
        {% include 'Partials/_menu.twig' with {items: menu.items} only %}
      </nav>
    {% endif %}
    {% if socialPlatforms %}
      {% include 'Partials/_socialPlatforms.twig' with {items: socialPlatforms, labels: labels} only %}
    {% endif %}
  </div>
</flynt-component>
