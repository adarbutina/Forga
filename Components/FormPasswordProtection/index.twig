<flynt-component name="FormPasswordProtection" class="componentSpacing">
  <div class="container" data-flow="layout">
    {% if preContentHtml %}
      <div class="preContent" data-size="narrow" data-align="center" data-text-align="center">
        {{ preContentHtml|e('wp_kses_post') }}
      </div>
    {% endif %}

    <form action="{{ form.url }}" method="POST" class="form">
      <input type="password" name="post_password" size="30" maxlength="30" aria-label="{{ labels.inputAriaLabel|e }}" placeholder="{{ labels.inputPlaceholder }}">
      <button type="submit" name="submit" class="button oneInputForm-button">{{ labels.buttonSubmit|e }}</button>
    </form>
  </div>
</flynt-component>
