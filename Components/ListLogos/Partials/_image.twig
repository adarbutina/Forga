<figure class="list__figure">
  {% if image.post_mime_type == 'image/svg+xml' %}
    <img class="list__figure-image lazyload"
      src="{{ placeholderImage(image.width, image.height, 'rgba(125, 125, 125, 0.1)') }}"
      width="{{ image.width }}"
      height="{{ image.height }}"
      data-src="{{ image.src }}"
      alt="{{ image.alt|e }}">
  {% else %}
    <img class="list__figure-image lazyload"
      src="{{ image.src|resizeDynamic(280) }}"
      width="{{ image.width }}"
      height="{{ image.height }}"
      srcset="{{ placeholderImage(image.width, image.height, 'rgba(125, 125, 125, 0.1)') }}"
      data-srcset="
        {{ image.src|resizeDynamic(640) }} 640w,
        {{ image.src|resizeDynamic(420) }} 420w,
        {{ image.src|resizeDynamic(280) }} 280w,
        {{ image.src|resizeDynamic(140) }} 140w"
      data-sizes="auto"
      alt="{{ image.alt|e }}">
  {% endif %}
</figure>
