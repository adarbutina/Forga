<flynt-component name="ListLogos" {{- not options.noComponentSpacing ? ' class="componentSpacing"' }} {{- options.theme ? ' data-theme=' ~ options.theme}}>
  <div class="container" data-flow="layout">
    {% if preContentHtml %}
      <div data-size="{{ options.contentSize }}" data-align="{{ options.contentAlign }}">
        {{ preContentHtml|e('wp_kses_post') }}
      </div>
    {% endif %}
    <ul class="list">
      {% for item in items|filter(item => item.image) %}
        <li class="list__item {{ options.card ? 'boxPadding' }}">
          {% if item.link %}
            <a class="list__link" href="{{ item.link.url|e('esc_url') }}" aria-label="{{ item.link.title|e }}" {{- item.link.is_external or item.link.is_target_blank ? ' target="_blank" rel="noopener noreferrer"' -}}></a>
          {% endif %}
          {% include 'Partials/_image.twig' with {image: item.image, link: item.link, type: options.card} only %}
        </li>
      {% endfor %}
    </ul>
  </div>
</flynt-component>
