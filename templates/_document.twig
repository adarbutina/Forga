<!DOCTYPE html>
<html class="html" {{ site.language_attributes }} {{ site.options.theme ? 'data-theme=' ~ site.options.theme }}>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="alternate" type="application/rss+xml" title="{{- site.labels.feed|replace({'%s': site.title}) -}}" href="{{ site.rss2|e('esc_url') }}">
    <title>{{ function('wp_title') }}</title>
    {{ function('wp_head') }}
  </head>
  <body class="{{ body_class }}">
    {{ function('wp_body_open') }}
    <a href="#mainContent" class="visuallyHidden -focusable">
      {{- site.labels.skipToMainContent|e -}}
    </a>
    <div class="pageWrapper">
      {% block layout %}
        <header class="mainHeader">
          {% block header %}
            {{ renderComponent('NavigationMain') }}
            {{ renderComponent('NavigationBurger') }}
          {% endblock %}
        </header>
        <main id="mainContent" class="mainContent" aria-label="{{ site.labels.mainContentAriaLabel|e }}">
          {% if function('post_password_required') %}
            {{ renderComponent('FormPasswordProtection') }}
          {% else %}
            {% block content %}
              No <code>{{ '{% block content %}' }}</code> defined for this template.
            {% endblock %}
          {% endif %}
        </main>
        <footer class="mainFooter">
          {% block footer %}
            {{ renderComponent('NavigationFooter') }}
          {% endblock %}
        </footer>
      {% endblock %}
    </div>
    <div id="wpFooter">
      {{ function('wp_footer') }}
    </div>
  </body>
</html>
